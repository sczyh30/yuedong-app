<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="48.0dip"
    android:background="?attr/layout_item_bg"
    android:orientation="vertical" >

    <View
        android:id="@+id/toolbar_divider"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="?attr/lineColor" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btn_change"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:contentDescription="@null"
            android:paddingLeft="@dimen/space_8"
            android:paddingRight="@dimen/space_8"
            android:src="@drawable/btn_opt_tools_to_text_selector" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="?attr/lineColor" />

        <FrameLayout
            android:id="@+id/view_comment_layout"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0" >

            <ImageView
                android:id="@+id/action_view_comment"
                style="@style/toolbar_action"
                android:src="@drawable/ic_action_comment" />

            <TextView
                android:id="@+id/action_comment_count"
                style="@style/toolbar_action_comment"
                android:visibility="gone"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/write_comment_layout"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0" >

            <ImageView
                android:id="@+id/action_write_comment"
                style="@style/toolbar_action"
                android:src="@drawable/ic_action_write" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/favor_layout"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0" >

            <ImageView
                android:id="@+id/action_favor"
                style="@style/toolbar_action"
                android:src="@drawable/ic_action_favor" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/repost_layout"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0" >

            <ImageView
                android:id="@+id/action_repost"
                style="@style/toolbar_action"
                android:src="@drawable/ic_action_repost" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/report_layout"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/action_report"
                style="@style/toolbar_action"
                android:src="@drawable/ic_action_report" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>