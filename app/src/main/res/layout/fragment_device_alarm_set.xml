<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.m1racle.yuedong.ui.fragment.DeviceAlarmSetFragment">

    <com.m1racle.yuedong.ui.widget.CustomerScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TimePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/alarm_timePicker"
                android:layout_gravity="center" />

            <View style="@style/h_line_green" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10"
                    android:layout_marginLeft="@dimen/space_10"
                    android:textSize="@dimen/text_size_16"
                    android:text="闹钟周期："/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/space_12"
                    android:layout_marginBottom="@dimen/space_12">
                    <CheckBox
                        android:layout_width="44dp"
                        android:layout_height="34dp"
                        android:layout_marginLeft="@dimen/space_10"
                        android:background="@drawable/cb_week_bg"
                        android:gravity="center"
                        android:button="@null"
                        android:id="@+id/cb_week_7"
                        android:text="周日"/>
                    <CheckBox
                        android:layout_width="44dp"
                        android:layout_height="34dp"
                        android:checked="true"
                        android:background="@drawable/cb_week_bg"
                        android:gravity="center"
                        android:button="@null"
                        android:id="@+id/cb_week_1"
                        android:text="周一"/>
                    <CheckBox
                        android:layout_width="44dp"
                        android:layout_height="34dp"
                        android:background="@drawable/cb_week_bg"
                        android:gravity="center"
                        android:button="@null"
                        android:id="@+id/cb_week_2"
                        android:text="周二"/>
                    <CheckBox
                        android:layout_width="44dp"
                        android:layout_height="34dp"
                        android:background="@drawable/cb_week_bg"
                        android:gravity="center"
                        android:button="@null"
                        android:id="@+id/cb_week_3"
                        android:text="周三"/>
                    <CheckBox
                        android:layout_width="44dp"
                        android:layout_height="34dp"
                        android:background="@drawable/cb_week_bg"
                        android:gravity="center"
                        android:button="@null"
                        android:id="@+id/cb_week_4"
                        android:text="周四"/>
                    <CheckBox
                        android:layout_width="44dp"
                        android:layout_height="34dp"
                        android:background="@drawable/cb_week_bg"
                        android:gravity="center"
                        android:button="@null"
                        android:id="@+id/cb_week_5"
                        android:text="周五"/>
                    <CheckBox
                        android:layout_width="44dp"
                        android:layout_height="34dp"
                        android:background="@drawable/cb_saturday_bg"
                        android:gravity="center"
                        android:button="@null"
                        android:id="@+id/cb_week_6"
                        android:text="周六"/>
                </LinearLayout>
            </LinearLayout>

            <View style="@style/h_line_green" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_16" >

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_4"
                    android:text="闹钟标题"
                    android:textColor="?attr/infoTextColor"
                    android:textSize="@dimen/text_size_16" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_alarm_set_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <View style="@style/h_line_green" />

        </LinearLayout>

    </com.m1racle.yuedong.ui.widget.CustomerScrollView>



</FrameLayout>
