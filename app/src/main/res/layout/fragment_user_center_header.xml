<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/layout_item_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_user_container"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@mipmap/user_center_bg"
        android:orientation="vertical"
        android:visibility="visible" >

        <RelativeLayout
            android:id="@+id/rl_user_center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true" >

            <com.m1racle.yuedong.ui.widget.AvatarView
                android:id="@+id/iv_avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/space_20"
                android:contentDescription="@null"
                android:src="@mipmap/widget_dface"
                app:border_color="@color/white"
                app:border_width="2dip" />

            <ImageView
                android:id="@+id/iv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_avatar"
                android:layout_alignRight="@id/iv_avatar" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_avatar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/space_5"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="3px"
            android:background="#18be40" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/ly_score"
                style="@style/uset_information_ll"
                android:clickable="false" >

                <TextView
                    android:id="@+id/tv_score"
                    style="@style/user_formation_text" />

                <TextView
                    style="@style/user_formation_info"
                    android:text="@string/user_score" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_following"
                style="@style/uset_information_ll" >

                <TextView
                    android:id="@+id/tv_following_count"
                    style="@style/user_formation_text" />

                <TextView
                    style="@style/user_formation_info"
                    android:text="@string/following" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_follower"
                style="@style/uset_information_ll" >

                <TextView
                    android:id="@+id/tv_follower_count"
                    style="@style/user_formation_text" />

                <TextView
                    style="@style/user_formation_info"
                    android:text="@string/follower" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="?attr/lineColor" />

    <TextView
        android:id="@+id/tv_latest_login_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:padding="@dimen/space_8"
        android:textColor="@color/main_gray"
        android:textSize="@dimen/text_size_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="?attr/lineColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="@dimen/space_4">

        <TextView
            android:id="@+id/tv_private_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_small_white_selector"
            android:clickable="true"
            android:drawableLeft="@mipmap/ic_private_message"
            android:drawablePadding="@dimen/space_4"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_20"
            android:paddingRight="@dimen/space_20"
            android:text="留言"
            android:textColor="?attr/textColor"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_follow_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_20"
            android:background="@drawable/btn_small_white_selector"
            android:clickable="true"
            android:drawableLeft="@mipmap/ic_followed"
            android:drawablePadding="@dimen/space_4"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_20"
            android:paddingRight="@dimen/space_20"
            android:text="关注"
            android:textColor="@color/main_black"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="?attr/lineColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/layout_item_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_blog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/layout_item_bg"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/space_8"
            android:text="@string/activi"
            android:textColor="?attr/textColor"
            android:textSize="@dimen/text_size_14" />

        <View
            android:layout_width="1px"
            android:layout_height="20dp"
            android:background="?attr/lineColor" />

        <TextView
            android:id="@+id/tv_information"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/layout_item_bg"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/space_8"
            android:text="@string/information"
            android:textColor="?attr/textColor"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

</LinearLayout>
